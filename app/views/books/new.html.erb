<%= form_for(@book, url: books_path) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
    	<h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
    	<ul>
    	<% @book.errors.full_messages.each do |message| %>
    	  <li><%= message %></li>
    	<% end %>
        </ul>
    </div>
  <% end %>
  <div class="row">
  	<div class="col-sm-2">
  		<%= f.file_field :book_image,class: 'img_field',style: 'display:none;' %> 
  		<%= attachment_image_tag @book, :book_image, fallback: 'no_image.jpg', onClick: "$('.img_field').click()", class: 'center-block img thumbnail img-responsive img_prev' %>
  	</div>
  	<div class="field">
  		<%= f.text_field :title %>	
  	</div>
  	<div class="field">
  		<%= f.text_area :body %>
  	</div>
  	<div class="field">
  		<%= f.text_field :tag %>	
  	</div>
  	<div class="field">
  		<%= f.text_field :author %>	
  	</div>
  	<div class="field">
  		<%= f.text_field :company %>	
  	</div>
  	<div class="field">
  		<%= f.text_field :year %>	
  	</div>
  	<%= f.submit "投稿" %>
<% end %>

  </div>